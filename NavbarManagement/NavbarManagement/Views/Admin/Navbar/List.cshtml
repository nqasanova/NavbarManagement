@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Navbar</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Order</th>
                            <th>IsBold</th>
                            <th>IsHeader</th>
                            <th>IsFooter</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Name</td>
                                <td>@navbar.Order</td>
                                <td>@navbar.IsBold</td>
                                <td>@navbar.IsHeader</td>
                                <td>@navbar.IsFooter</td>
                                <td class="text-end">
                                    <a asp-route="admin-navbar-update" asp-route-id="@navbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form class="d-none" method="POST" asp-route="admin-navbar-delete" asp-route-id="@navbar.Id" id="update-@navbar.Id">
                                        </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>